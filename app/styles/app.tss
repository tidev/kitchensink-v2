'Window[platform=ios]': {
	backgroundColor: 'white',
	extendEdges: [Ti.UI.EXTEND_EDGE_ALL],
	autoAdjustScrollViewInsets: true
}

'Window[platform=android]': {
	softKeyboardOnFocus: Ti.UI.Android.SOFT_KEYBOARD_SHOW_ON_FOCUS
}

'TabGroup[platform=ios]': {
	activeTabIconTint: Alloy.CFG.styles.tintColor,
	translucent: false,
	backgroundColor: 'white',
}

'Tab': {
	icon: '/images/icons/tab.png'
}

'ListItem': {
	accessoryType: Ti.UI.LIST_ACCESSORY_TYPE_DISCLOSURE,
	subtitleColor: '#777' // Titanium 6.1.0 and later
}

'.actionButton': {
	width: 300,
	height: 40,
	tintColor: 'white',
	borderRadius: 4,
	backgroundColor: Alloy.CFG.styles.tintColor,
	color: 'white'
}

'.stateLabel': {
	top: 100,
	left: 20,
	right: 20,
	width: Ti.UI.FILL,
	textAlign: 'center',
	font: {
		fontSize: 15
	}
}

'.placeholderLabel': {
	width: 250,
	height: 125,
	color: '#333',
	backgroundColor: '#eee',
	borderRadius: 4,
	textAlign: Ti.UI.TEXT_ALIGNMENT_CENTER
}

'.paddedSafeArea[platform=ios]': {
	extendSafeArea: false
}

'.largeTitles': {
  largeTitleEnabled: true,
  largeTitleDisplayMode: Ti.UI.iOS.LARGE_TITLE_DISPLAY_MODE_ALWAYS
}

'.noLargeTitles': {
  largeTitleDisplayMode: Ti.UI.iOS.LARGE_TITLE_DISPLAY_MODE_NEVER
}
