<Alloy>
    <Window title="Time Picker (Compact)" class="paddedSafeArea">
        <Label id="valueLabel" textAlign="Ti.UI.TEXT_ALIGNMENT_CENTER" top="30"/>
        <Picker
            id="timePicker"
            type="Ti.UI.PICKER_TYPE_TIME"
            datePickerStyle="Ti.UI.DATE_PICKER_STYLE_COMPACT"
            borderStyle="Ti.UI.INPUT_BORDERSTYLE_ROUNDED"
            hintText="Time"
            onChange="onPickerValueChanged"/>
        <Label id="footnoteLabel" platform="ios" bottom="20">The "compact" style is only supported on iOS 13.4+.</Label>
    </Window>
</Alloy>
